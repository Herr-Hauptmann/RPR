<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.input.KeyCodeCombination?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<BorderPane prefHeight="200.0" prefWidth="200.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <stylesheets>
      <URL value="@/css/korisnici.css" />
   </stylesheets>
   <center>
      <GridPane alignment="center" hgap="10" vgap="10">

         <columnConstraints>
            <ColumnConstraints maxWidth="200" minWidth="200" />
            <ColumnConstraints maxWidth="100" minWidth="100" />
            <ColumnConstraints maxWidth="1.7976931348623157E308" minWidth="-Infinity" prefWidth="100.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints vgrow="ALWAYS" />
         </rowConstraints>
         <children>

            <ListView fx:id="listKorisnici" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" GridPane.hgrow="ALWAYS" GridPane.rowSpan="5" GridPane.vgrow="ALWAYS" />
            <Label text="%ime" GridPane.columnIndex="1" />
            <TextField fx:id="fldIme" maxWidth="1.7976931348623157E308" GridPane.columnIndex="2" GridPane.hgrow="ALWAYS" />
            <Label text="%prezime" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <TextField fx:id="fldPrezime" GridPane.columnIndex="2" GridPane.rowIndex="1" />
            <Label text="%email" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <TextField fx:id="fldEmail" GridPane.columnIndex="2" GridPane.rowIndex="2" />
            <Label text="%username" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            <TextField fx:id="fldUsername" GridPane.columnIndex="2" GridPane.rowIndex="3" />
            <Label text="%password" GridPane.columnIndex="1" GridPane.rowIndex="4" />
            <PasswordField fx:id="fldPassword" GridPane.columnIndex="2" GridPane.rowIndex="4" />
            <ButtonBar prefHeight="40.0" prefWidth="200.0" GridPane.columnSpan="3" GridPane.rowIndex="5">
              <buttons>
                  <Button fx:id="btnDodaj" mnemonicParsing="false" onAction="#dodajAction" text="%add" />
                  <Button fx:id="btnObrisi" mnemonicParsing="false" onAction="#obrisiAction" text="%delete" />
                  <Button fx:id="btnKraj" cancelButton="true" mnemonicParsing="false" onAction="#krajAction" text="%exit" />
              </buttons>
            </ButtonBar>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </GridPane>
   </center>
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu text="%file">
            <items>
                  <MenuItem fx:id="sacuvajMeni" onAction="#sacuvajAction" text="%save">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="S" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator></MenuItem>
                  <MenuItem fx:id="printanjeMeni" onAction="#printanjeAction" text="%print">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="P" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator></MenuItem>
                  <Menu text="%language">
                    <items>
                      <MenuItem mnemonicParsing="false" onAction="#dajBosanski" text="%bosanski" />
                        <MenuItem mnemonicParsing="false" onAction="#dajEngleski" text="%english" />
                    </items>
                  </Menu>
              <MenuItem onAction="#krajAction" text="%gasi" />
            </items>
          </Menu>
          <Menu text="%help">
            <items>
              <MenuItem fx:id="aboutMeni" onAction="#prikaziAbout" text="%about" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
</BorderPane>
